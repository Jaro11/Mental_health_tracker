<!-- app/views/journal_entries/_form.html.erb -->
<%= form_with(model: @journal_entry, local: false, id: 'journal-entry-form') do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control', rows: 5, placeholder: "What's on your mind?" %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Journal Entry', class: 'btn btn-primary' %>
  </div>
<% end %>
